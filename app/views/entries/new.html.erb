<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div  class="field">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
    <%= f.label :body, 'Body'%>
    <%= f.text_area :body, placeholder: "Compose new post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
